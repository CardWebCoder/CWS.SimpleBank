@model CWS.SimpleBank.Data.Account
@{ 
        var customerNumber = Model.Customers.FirstOrDefault().CustomerNumber;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-1 col-md-4">Number of Days:</div>
                <div class="col-md-4"><input id="days" type="text" /></div>
            </div>
            <div class="row">
                <div class="col-md-offset-1 col-md-4">Interest Amount:</div>
                <div class="col-md-4"><div id="interest-amount"></div></div>
            </div>
            <div class="row" style="margin-top:15px;">
                <div class="col-md-offset-5 col-md-5">
                    @*Please a button or input here *@
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#days").change(function () {
            $("#interest-amount").val("");

            if ($(this).val().trim() != "") {
                $("#submit-button").removeAttr("disabled");
            }
            else
                $("#submit-button").attr("disabled", "disabled");
        });
    });
</script>
